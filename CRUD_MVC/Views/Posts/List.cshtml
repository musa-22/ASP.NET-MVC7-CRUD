@model List<CRUD_MVC.Models.Domain.Post>





<div class="container bg-opacity-10 bg-secondary py-5">

    <h1 class="text-center">Show All Post List</h1>

</div>

<div class="container py-3">


    <a class="btn btn-dark float-end" asp-action="Add">Add Post</a>

</div>

<div class="container py-4">

    <table class="table">

        <thead>

            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Date</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>


        </thead>

        <tbody>

            
                @foreach (var getList in Model)
                {
                <tr>

                    <td>@getList.Id</td>
                    <td>@getList.Title</td>
                    <td><img class="home_Post_picture img-thumbnail hover" src="/Images/@getList.imageUrl" /></td>
                    <td>@getList.PublishedDate.ToString("dd/MM/yyyy")</td>
                    <td><a class="btn btn-dark" asp-route-id="@getList.Id" asp-action="Edit" asp-controller="Posts">Update</a></td>
                    <td><a class="btn btn-danger" asp-route-id="@getList.Id" asp-action="Delete" asp-controller="Posts">Delete</a></td>

                </tr>
                }

                
          

        </tbody>



    </table>


</div>